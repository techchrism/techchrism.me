---
import Layout from '../layouts/Layout.astro';
import Project from '../components/Project.astro';
import { projects } from '../projects';
import Divider from '../components/Divider.astro';
import { Icon } from 'astro-icon';
---

<Layout title="Home">
	<main class="m-auto p-4 max-w-prose">
		<h1>Hi, I'm Chris</h1>
		<h2 class="mb-2">I make robots, webapps, Minecraft plugins, Discord bots, and just about everything else.</h2>
		
		<ul class="text-xl space-y-2 mx-1">
			<li>
				<Icon name="ic:baseline-email" size={'1em'} class="inline mx-1"/>
				<a href="mailto:chris@techchrism.me">chris@techchrism.me</a>
			</li>
			<li>
				<Icon name="akar-icons:github-fill" size={'1em'} class="inline mx-1"/>
				<a href="https://github.com/techchrism">techchrism</a>
			</li>
			<li>
				<Icon name="akar-icons:discord-fill" size={'1em'} class="inline mx-1"/>
				techchrism
			</li>
		</ul>

		<Divider>Some of my favorite projects</Divider>

		<ul role="list" class="flex flex-col gap-3">
			{projects.map(project => (
				<Project project={project}/>
			))}
		</ul>

		<Divider>
			<a href="https://github.com/techchrism?tab=repositories&q=&type=&language=&sort=stargazers" rel="noopener">Find more on my GitHub</a>
		</Divider>
	</main>
</Layout>